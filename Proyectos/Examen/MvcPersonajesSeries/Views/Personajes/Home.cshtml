@model IEnumerable<MvcPersonajesSeries.Models.PersonajesSeries>

@{
    ViewData["Title"] = "Home";
}

<h1>Home</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <img src="@item.Imagen" style="height:200px"/>
            </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.IdPersonaje })" class="btn btn-primary">Edit</a> |
                    <a href="@Url.Action("Details", new { id = item.IdPersonaje })" class="btn btn-info">Details</a> |
                    <a href="@Url.Action("Delete", new { id = item.IdPersonaje })" class="btn btn-danger">Delete</a>
                </td>

        </tr>
}
    </tbody>
</table>
