@model List<BlobModel>

<h1 style="color:darkgreen">
    List blobs
</h1>

<p>
    <a asp-controller="AzureBlobs"
       asp-action="ListContainers">
        Back to containers
    </a>
</p>

<ul class="list-group">
    @foreach(BlobModel blob in Model)
    {
        <li class="list-group-item list-group-item-danger">
            @blob.Nombre
            <img src="@blob.Url" style="width:150px;height:150px"/>
            <a asp-controller="AzureBlobs"
            asp-action="DeleteBlob"
            asp-route-containername="@blob.Contenedor"
            asp-route-blobname="@blob.Nombre"
            class="btn btn-danger">
            Delete file
        </a>
        </li>
    }
</ul>