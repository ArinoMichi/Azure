
<h1>Enviar mail</h1>

<form method="post">
    <label>Email</label>
    <input type="text" name="email" class="form-control" />
    <label>Asunto</label>
    <input type="text" name="asunto" class="form-control" />
    <label>Mensaje</label>
    <input type="text" name="mensaje" class="form-control" />
    <button class="btn btn-info">
        Enviar Mail
    </button>
</form>

<h2 style="color:darkcyan">
    @ViewData["MENSAJE"]
</h2>
